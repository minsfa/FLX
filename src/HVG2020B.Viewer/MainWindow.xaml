<Window x:Class="HVG2020B.Viewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:scottplot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        xmlns:vm="clr-namespace:HVG2020B.Viewer.ViewModels"
        xmlns:converters="clr-namespace:HVG2020B.Viewer.Converters"
        mc:Ignorable="d"
        Title="HVG-2020B Viewer"
        Height="700" Width="1100"
        MinHeight="500" MinWidth="900"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:FileExistsToVisibilityConverter x:Key="FileExistsToVisibility"/>
        <converters:FileNotExistsToVisibilityConverter x:Key="FileNotExistsToVisibility"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibility"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Device List -->
        <Border Grid.Column="0" Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="12" Margin="0,0,16,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Devices" Foreground="{StaticResource PrimaryLightBrush}" FontWeight="SemiBold" FontSize="14" Margin="4,0,0,8"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Devices}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{StaticResource BackgroundBrush}" CornerRadius="6" Padding="10" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" FontSize="14" Margin="0,0,6,0" VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="&#x25CF;"/>
                                                        <Setter Property="Foreground" Value="{StaticResource DangerBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                                                <Setter Property="Text" Value="&#x25CF;"/>
                                                                <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <TextBlock Grid.Column="1" Text="{Binding DeviceId}" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>

                                            <TextBlock Grid.Column="2" Text="{Binding PortName}" Foreground="{StaticResource TextSecondaryBrush}"
                                                       FontSize="11" VerticalAlignment="Center" Margin="6,0,0,0"/>
                                        </Grid>

                                        <TextBlock Grid.Row="1" Text="{Binding CurrentPressure}"
                                                   Foreground="{StaticResource PrimaryBrush}" FontSize="18" FontWeight="Bold"
                                                   Margin="0,6,0,0"/>

                                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                                            <ToggleButton Content="&#x2502;&#x2502;&#x2502;" FontSize="9" Width="32" Height="28" Margin="0,0,6,0"
                                                          IsChecked="{Binding IsVisibleOnChart, Mode=OneWay}"
                                                          Command="{Binding DataContext.ToggleGraphCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                          CommandParameter="{Binding}">
                                                <ToggleButton.Style>
                                                    <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                                                        <Setter Property="Background" Value="{StaticResource DisabledBrush}"/>
                                                        <Setter Property="Foreground" Value="White"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </ToggleButton.Style>
                                            </ToggleButton>
                                            <Button Content="&#x2715;" Width="32" Height="28" Foreground="{StaticResource TextSecondaryBrush}"
                                                    Command="{Binding DataContext.RemoveDeviceCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <Border Grid.Row="2" Background="{StaticResource BackgroundBrush}" CornerRadius="6" Padding="10" Margin="0,8,0,8">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsScanning}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding HasScanResults}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <Grid>
                        <StackPanel>
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsScanning}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <TextBlock Text="Scanning devices..." Foreground="{StaticResource TextBrush}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding ScanProgressText}" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                            <ProgressBar Height="8" Margin="0,8,0,0"
                                         Minimum="0" Maximum="1"
                                         Value="{Binding ScanProgressValue}"/>
                            <TextBlock Text="{Binding ScanElapsedSeconds, StringFormat='Elapsed: {0}s'}"
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,6,0,0"/>
                            <Button Content="Cancel" Padding="10,4" Margin="0,8,0,0"
                                    Command="{Binding CancelScanCommand}"/>
                        </StackPanel>

                        <StackPanel>
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasScanResults}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <TextBlock Text="{Binding ScanProgressText}" Foreground="{StaticResource TextBrush}" FontWeight="SemiBold"/>

                            <ItemsControl ItemsSource="{Binding ScanResults}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel Margin="0,6,0,0">
                                            <StackPanel DockPanel.Dock="Left">
                                                <TextBlock Text="{Binding DeviceType}" Foreground="{StaticResource TextBrush}" FontSize="12"/>
                                                <TextBlock Text="{Binding PortName}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                                            </StackPanel>
                                            <Button Content="+ Add" Padding="8,2" Margin="8,0,0,0"
                                                    Command="{Binding DataContext.AddScannedDeviceCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                        <Setter Property="IsEnabled" Value="True"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsAdded}" Value="True">
                                                                <Setter Property="IsEnabled" Value="False"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </DockPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Grid>
                </Border>

                <StackPanel Grid.Row="3" Orientation="Horizontal">
                    <Button Content="Scan" Padding="10,6"
                            Command="{Binding ScanForDevicesCommand}"
                            Foreground="White" Background="{StaticResource PrimaryBrush}"/>
                    <Button Content="Emulator" Padding="10,6" Margin="6,0,0,0"
                            Command="{Binding AddEmulatorDeviceCommand}"
                            Foreground="White" Background="{StaticResource EmulatorBrush}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Middle Panel: Studies -->
        <Border Grid.Column="1" Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="12" Margin="0,0,16,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header: Title + New Study -->
                <DockPanel Grid.Row="0" LastChildFill="False">
                    <TextBlock Text="Studies" Foreground="{StaticResource PrimaryLightBrush}" FontWeight="SemiBold" FontSize="14" Margin="4,0,0,8"/>
                    <Button Content="+ New Study" Padding="8,4" Margin="0,0,4,8"
                            Command="{Binding OpenNewStudyDialogCommand}"
                            DockPanel.Dock="Right"/>
                </DockPanel>

                <!-- Search Box -->
                <Grid Grid.Row="1" Margin="0,0,0,8">
                    <TextBox Text="{Binding StudySearchText, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource DarkTextBox}" x:Name="StudySearchBox"/>
                    <TextBlock Text="Search studies..." IsHitTestVisible="False"
                               Foreground="{StaticResource DisabledBrush}" Margin="8,6,0,0" FontSize="12">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=StudySearchBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <!-- Top-level action toolbar -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,8">
                    <Button Content="Analyze" Padding="8,4" Margin="0,0,4,0"
                            Command="{Binding AnalyzeSelectedStudyCommand}"
                            Foreground="White" Background="{StaticResource PrimaryBrush}" BorderThickness="0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="IsEnabled" Value="False"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedStudy.State}" Value="Done">
                                        <Setter Property="IsEnabled" Value="True"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="Open Folder" Padding="8,4" Margin="0,0,4,0"
                            Command="{Binding OpenStudyFolderCommand}">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="IsEnabled" Value="False"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedStudy.State}" Value="Done">
                                        <Setter Property="IsEnabled" Value="True"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="&#x2715; Delete" Padding="8,4" Margin="0,0,0,0"
                            Command="{Binding DeleteSelectedStudyCommand}"
                            Foreground="{StaticResource TextSecondaryBrush}" BorderThickness="0"
                            IsEnabled="{Binding HasSelectedStudy}"/>
                </StackPanel>

                <!-- New Study Dialog -->
                <Border Grid.Row="3" Background="{StaticResource BackgroundBrush}" CornerRadius="6" Padding="10" Margin="0,0,0,8">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsNewStudyDialogOpen}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <StackPanel>
                        <TextBlock Text="Id" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding NewStudyId, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource DarkTextBox}" Margin="0,0,0,8"/>

                        <TextBlock Text="Study" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                        <TextBox Text="{Binding NewStudyTitle, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource DarkTextBox}" Margin="0,0,0,8"/>

                        <DockPanel Margin="0,0,0,4">
                            <TextBlock Text="Devices" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="All" Padding="6,2" Margin="4,0,0,0" FontSize="11"
                                        Command="{Binding SelectAllDevicesCommand}"
                                        Foreground="{StaticResource TextBrush}" Background="{StaticResource SurfaceLightBrush}" BorderThickness="0"/>
                                <Button Content="None" Padding="6,2" Margin="4,0,0,0" FontSize="11"
                                        Command="{Binding DeselectAllDevicesCommand}"
                                        Foreground="{StaticResource TextBrush}" Background="{StaticResource SurfaceLightBrush}" BorderThickness="0"/>
                            </StackPanel>
                        </DockPanel>
                        <ItemsControl ItemsSource="{Binding NewStudyDeviceSelections}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding DeviceId}" IsChecked="{Binding IsSelected}" Style="{StaticResource DarkCheckBox}" Margin="0,2,0,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                            <Button Content="Create" Padding="10,4" Margin="0,0,6,0"
                                    Command="{Binding CreateNewStudyCommand}"/>
                            <Button Content="Cancel" Padding="10,4"
                                    Command="{Binding CancelNewStudyCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Study List (selectable) -->
                <ListBox Grid.Row="4" ItemsSource="{Binding FilteredStudies}"
                         SelectedItem="{Binding SelectedStudy}"
                         Background="Transparent" BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd" CornerRadius="6" Padding="10" Margin="0,0,0,8"
                                                Background="{StaticResource BackgroundBrush}" BorderThickness="2" BorderBrush="Transparent">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource SurfaceLightBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" Foreground="{StaticResource TextBrush}"/>
                                <TextBlock Text="{Binding StudyId}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" Margin="0,2,0,0"/>
                                <TextBlock Text="&#x26A0; Files missing" Foreground="{StaticResource DangerBrush}" FontSize="10"
                                           Visibility="{Binding IsBroken, Converter={StaticResource BoolToVisibility}}" Margin="0,2,0,0"/>
                                <DockPanel Margin="0,4,0,0">
                                    <Border DockPanel.Dock="Right" CornerRadius="4" Padding="6,2" Margin="8,0,0,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="{StaticResource DisconnectedBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding State}" Value="Ready">
                                                        <Setter Property="Background" Value="{StaticResource ReadyBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding State}" Value="Recording">
                                                        <Setter Property="Background" Value="{StaticResource RecordingBrush}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding State}" Value="Done">
                                                        <Setter Property="Background" Value="{StaticResource DoneBrush}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding State}" Foreground="White" FontSize="11"/>
                                    </Border>
                                    <TextBlock Text="{Binding DevicesSummary}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11" VerticalAlignment="Center"/>
                                </DockPanel>
                                <!-- Recording info: visible when Recording or Done -->
                                <TextBlock Margin="0,4,0,0" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding State}" Value="Recording">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding State}" Value="Done">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                    <Run Text="{Binding RecordedSampleCount, Mode=OneWay}"/>
                                    <Run Text=" samples"/>
                                </TextBlock>
                                <!-- Start/Stop buttons remain per-card -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0">
                                    <!-- Start: visible when Ready -->
                                    <Button Content="&#x25B6; Start" Padding="8,4" Margin="0,0,4,0"
                                            Command="{Binding DataContext.StartStudyRecordingCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Foreground="White" Background="{StaticResource SuccessBrush}" BorderThickness="0">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding State}" Value="Ready">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <!-- Stop: visible when Recording -->
                                    <Button Content="&#x25A0; Stop" Padding="8,4" Margin="0,0,4,0"
                                            Command="{Binding DataContext.StopStudyRecordingCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Foreground="White" Background="{StaticResource DangerBrush}" BorderThickness="0">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding State}" Value="Recording">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <!-- Right Panel: Tabs -->
        <TabControl Grid.Column="2" Margin="0">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Foreground" Value="{StaticResource PrimaryLightBrush}"/>
                    <Setter Property="Padding" Value="12,6"/>
                </Style>
            </TabControl.Resources>

            <TabItem Header="Live View">
                <Grid Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header / Controls -->
                    <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <TextBlock Text="Live View" Foreground="{StaticResource PrimaryLightBrush}" FontSize="16" FontWeight="SemiBold"/>
                    </Border>

                    <!-- Info Bar -->
                    <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="16,12" Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Live Sample Count -->
                            <StackPanel Grid.Column="0" Margin="0,0,24,0">
                                <TextBlock Text="Samples" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                                <TextBlock Text="{Binding SampleCountDisplay}"
                                           Foreground="{StaticResource TextBrush}" FontSize="20" FontWeight="SemiBold"/>
                            </StackPanel>

                            <!-- Elapsed Time -->
                            <StackPanel Grid.Column="1" Margin="0,0,24,0">
                                <TextBlock Text="Elapsed" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12"/>
                                <TextBlock Text="{Binding ElapsedTime}"
                                           Foreground="{StaticResource TextBrush}" FontSize="20" FontWeight="SemiBold"/>
                            </StackPanel>

                            <!-- Spacer -->
                            <Border Grid.Column="2"/>

                            <!-- Clear Button -->
                            <Button Grid.Column="3" Content="Clear"
                                    Command="{Binding ClearChartCommand}"
                                    Padding="16,8" Margin="0,0,8,0"/>
                        </Grid>
                    </Border>

                    <!-- Chart -->
                    <Border Grid.Row="2" Background="{StaticResource SurfaceBrush}" CornerRadius="8" Padding="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Scale Toggle -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,8,8">
                                <TextBlock Text="Y-Axis:" Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center" Margin="0,0,8,0" FontSize="12"/>
                                <RadioButton Content="Linear" GroupName="ScaleGroup"
                                             IsChecked="{Binding UseLogScale, Converter={StaticResource InverseBoolConverter}}"
                                             Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"
                                             Margin="0,0,12,0"/>
                                <RadioButton Content="Log" GroupName="ScaleGroup"
                                             IsChecked="{Binding UseLogScale}"
                                             Foreground="{StaticResource TextBrush}" VerticalAlignment="Center"/>
                            </StackPanel>

                            <scottplot:WpfPlot Grid.Row="1" x:Name="PressureChart"/>
                        </Grid>
                    </Border>

                    <!-- Status Bar -->
                    <Border Grid.Row="3" Margin="0,16,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- State Indicator -->
                            <Border Grid.Column="0" CornerRadius="4" Padding="8,4" Margin="0,0,12,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="{StaticResource DisconnectedBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding CurrentState}" Value="Live">
                                                <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding CurrentState}" Value="Recording">
                                                <Setter Property="Background" Value="{StaticResource RecordingBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Foreground="White" FontWeight="SemiBold" FontSize="11">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="DISCONNECTED"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CurrentState}" Value="Live">
                                                    <Setter Property="Text" Value="LIVE"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding CurrentState}" Value="Recording">
                                                    <Setter Property="Text" Value="● REC"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>

                            <TextBlock Grid.Column="1" Text="{Binding StatusMessage}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <TabItem Header="Flux Results">
                <Grid Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <TextBlock Text="Flux Results Dashboard"
                                   Foreground="{StaticResource PrimaryLightBrush}" FontSize="16" FontWeight="SemiBold"/>
                    </Border>

                    <!-- DataGrid -->
                    <Border Grid.Row="1" Background="{StaticResource SurfaceBrush}"
                            CornerRadius="8" Padding="8">
                        <DataGrid ItemsSource="{Binding AllFluxResults}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserSortColumns="True"
                                  GridLinesVisibility="Horizontal"
                                  HeadersVisibility="Column"
                                  Background="Transparent"
                                  RowBackground="{StaticResource BackgroundBrush}"
                                  AlternatingRowBackground="{StaticResource SurfaceBrush}"
                                  Foreground="{StaticResource TextBrush}"
                                  BorderThickness="0">
                            <DataGrid.InputBindings>
                                <MouseBinding MouseAction="LeftDoubleClick"
                                              Command="{Binding OpenFluxResultStudyCommand}"
                                              CommandParameter="{Binding SelectedFluxResult}"/>
                            </DataGrid.InputBindings>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Date"
                                    Binding="{Binding CalculatedAt, StringFormat=yyyy-MM-dd HH:mm}"
                                    Width="130"/>
                                <DataGridTextColumn Header="Id"
                                    Binding="{Binding MeasurementId}" Width="80"/>
                                <DataGridTextColumn Header="Study"
                                    Binding="{Binding StudyTitle}" Width="110"/>
                                <DataGridTextColumn Header="Device"
                                    Binding="{Binding DeviceId}" Width="90"/>
                                <DataGridTextColumn Header="Flux (mol/m²s)"
                                    Binding="{Binding Flux, StringFormat=E3}" Width="110"/>
                                <DataGridTextColumn Header="Permeance (GPU)"
                                    Binding="{Binding PermeanceGpu, StringFormat=F2}" Width="110"/>
                                <DataGridTextColumn Header="R²"
                                    Binding="{Binding RSquared, StringFormat=F4}" Width="70"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
