<Window x:Class="HVG2020B.Viewer.DeviceSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Device for Analysis"
        Height="250" Width="350"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="This study contains multiple devices. Select one:"
                   Foreground="{StaticResource TextBrush}"
                   TextWrapping="Wrap" Margin="0,0,0,12"/>

        <ListBox Grid.Row="1" x:Name="DeviceListBox"
                 SelectionMode="Single"
                 Background="{StaticResource SurfaceBrush}"
                 Foreground="{StaticResource TextBrush}"
                 BorderBrush="{StaticResource DisabledBrush}"
                 Margin="0,0,0,12"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="80" Margin="0,0,8,0"
                    Style="{StaticResource PrimaryButton}" Padding="8,6"
                    Click="OnOkClick" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Padding="8,6"
                    Foreground="{StaticResource TextBrush}"
                    Background="{StaticResource DisabledBrush}"
                    BorderThickness="0"
                    Click="OnCancelClick" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
